@model Zero.Web.Areas.Cms.Models.Menu.CreateOrEditMenuViewModel

@await Html.PartialAsync("~/Areas/App/Views/Common/Modals/_ModalHeader.cshtml", new ModalHeaderViewModel(Model.IsEditMode ? (L("Edit")) : L("Create")))

<div class="modal-body">
    <div id="MenuInformationsTab">
        <form name="MenuInformationsForm" role="form" novalidate class="form-validation">
            @if (Model.IsEditMode)
            {
                <input type="hidden" name="id" value="@Model.Menu.Id"/>
            }
            <input type="hidden" name="code" value="@Model.Menu.Code"/>
            <div class="row">
                <div class="col-6">
                    <div class="form-group">
                        <label>
                            @L("MenuGroup") <span class="text-danger">*</span>
                        </label>
                        <select id="MenuGroupId" name="menuGroupId" class="form-control requiredSelect2">
                            @if (Model.IsEditMode)
                            {
                                <option value="@Model.Menu.MenuGroupId" selected>@Model.Menu.MenuGroupName</option>
                            }
                        </select>
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-group">
                        <label>
                            @L("Name") <span class="text-danger">*</span>
                        </label>
                        <input class="form-control" id="Menu_Name" value="@Model.Menu.Name" type="text" name="name" required maxlength="@ZeroConst.MaxNameLength" minlength="@ZeroConst.MinNameLength"/>
                    </div>
                </div>
                <div class="col-6">
                    <div class="form-group">
                        <label for="Menu_Url">@L("TargetUrl")</label>
                        <input class="form-control" id="Menu_Url" type="text" name="url" value="@Model.Menu.Url"/>
                    </div>
                </div>
                <div class="col-3">
                    <div class="form-group">
                        <label>
                            @L("Order")
                        </label>
                        <input class="form-control" id="Menu_Order" value="@Model.Menu.Order" type="text" name="order"/>
                    </div>
                </div>
                <div class="col-3">
                    <div class="form-group text-center mb-0">
                        <label>@L("IsActive")</label>
                        <div class="form-control no-border">
                            <label class="checkbox checkbox-outline checkbox-primary inline-block">
                                <input type="checkbox" id="Menu_IsActive" name="isActive" value="true" @Html.Raw(!Model.Menu.IsActive ? "" : "checked=\"checked\"")>
                                <span></span>
                            </label>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@await Html.PartialAsync("~/Areas/App/Views/Common/Modals/_ModalFooterWithSaveAndCancel.cshtml")