@model Zero.Web.Areas.Cms.Models.Menu.MenuViewModel
@{
    ViewBag.CurrentPageName = AppPageNames.Cms.Menu;
}

@section Scripts
{
    <script abp-src="/3rds/jquery.nestable/jquery.nestable.js" asp-append-version="true"></script>
        <script abp-src="/3rds/jquery.sortable/jquery.sortable.js" asp-append-version="true"></script>
    <script abp-src="@ZeroConst.ScriptPathCms/Menu/Index.js" asp-append-version="true"></script>
}
@section Styles {
    <link href="/3rds/jquery.nestable/jquery.nestable.css" rel="stylesheet"/>
    <link href="/3rds/jquery.nestable/jquery.nestable-custom.css" rel="stylesheet"/>
    <link href="/3rds/jquery.sortable/jquery.sortable.css" rel="stylesheet"/>
}

<div class="content d-flex flex-column flex-column-fluid" id="kt_content">
    <abp-page-subheader title="@L("Menus")" description="@L("MenusHeaderInfo")">
        @if (IsGranted(CmsPermissions.Menu_Create))
        {
            <button id="CreateNewButton" class="btn btn-primary blue">
                <i class="fa fa-plus"></i> @L("Create")
            </button>
        }
    </abp-page-subheader>

    <div class="@(await GetContainerClass())">
        <div class="card card-custom gutter-b">
            <div class="card-body">
                <div class="form">
                    <div id="MenusFormFilter">
                        <div class="row">
                            <div class="col-4">
                                <div class="form-group">
                                    <label>@L("MenuGroup")</label>
                                    <select id="MenuGroupSelector" class="form-control">
                                    </select>
                                </div>
                            </div>
                            <div class="col-8">
                                <div class="form-group">
                                    <label>@L("Search")</label>
                                    <div class="input-group">
                                        <input id="MenusTableFilter" class="form-control" type="text" value="@ViewBag.FilterText" placeholder="@L("SearchWithThreeDot")" aria-describedby="basic-addon2">
                                        <span class="input-group-btn">
                                            <button type="button" name="RefreshButton" class="btn btn-primary">
                                                <i class="fa fa-search"></i>
                                            </button>
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div>
                    <div class="dd">
                        <ol class="dd-list" id="dd-list">
                        </ol>
                    </div>
                </div>
            </div>
            @if (IsGranted(CmsPermissions.Menu_Create) || IsGranted(CmsPermissions.Menu_Edit))
            {
                <div class="card-footer py-15">
                    <button type="button" id="UpdateStructureButton" class="btn btn-primary mr-2 float-right">
                        <i class="la la-save"></i> @L("UpdateStructure")
                    </button>
                </div>
            }
            <textarea id="TestFroala" class="frSimpleEditor" initEditor="false"></textarea>
        </div>
    </div>
</div>