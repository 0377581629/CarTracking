@model Zero.Web.Areas.Lib.Model.Device.DeviceViewModel
@{
    ViewBag.CurrentPageName = AppPageNames.Lib.Device;
}

@section Scripts
{
    <script abp-src="@ZeroConst.ScriptPathLib/Device/Index.js" asp-append-version="true"></script>
}

<div class="content d-flex flex-column flex-column-fluid" id="kt_content">
    <abp-page-subheader title="@L("Device")" description="@L("DeviceHeaderInfo")">
        @if (IsGranted(LibPermissions.Device_Create))
        {
            <button id="CreateNewButton" class="btn btn-primary blue">
                <i class="fa fa-plus"></i> @L("Create")
            </button>
        }
    </abp-page-subheader>

    <div class="@(await GetContainerClass())">
        <div class="card card-custom gutter-b">
            <div class="card-body">
                <div class="form">
                    <div id="DeviceFormFilter">
                        <div class="row mb-15">
                            <div class="col-12">
                                <div class="input-group">
                                    <input id="DeviceTableFilter" class="form-control" type="text" value="@ViewBag.FilterText" placeholder="@L("SearchWithThreeDot")" aria-describedby="basic-addon2">
                                    <span class="input-group-btn">
                                        <button type="button" name="RefreshButton" class="btn btn-primary">
                                            <i class="fa fa-search"></i>
                                        </button>
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="align-items-center">
                    <table id="DeviceTable" class="display table table-striped table-bordered table-hover">
                        <thead>
                        <tr>
                            <th></th>
                            <th class="text-center">@L("Actions")</th>
                            <th class="text-center">@L("Code")</th>
                            <th class="text-center">@L("SimCard")</th>
                            <th class="text-center">@L("NetworkProvider")</th>
                            <th class="text-center">@L("StartDate")</th>
                            <th class="text-center">@L("Imei")</th>
                            <th class="text-center">@L("IsActive")</th>
                            <th class="text-center">@L("NeedUpdate")</th>
                        </tr>
                        </thead>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>