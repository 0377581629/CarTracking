@using Microsoft.AspNetCore.Mvc.Rendering
@model Zero.Web.Areas.Lib.Model.Route.CreateOrEditRouteViewModel

<div class="row">
    <div class="col-12">
        <div id="map" style="width: 100%; height: 500px; border: 1px solid #ccc"></div>
    </div>
    <div class="col-12">
        <table class="display table table-bordered table-hover input-table mb-0" id="RouteDetailTable">
            <thead>
            <tr>
                <th class="text-center text-middle w-40"></th>
                <th class="text-center text-middle">@L("Point")</th>
                <th class="text-center text-middle">@L("Time")</th>
                <th class="text-center text-middle w-30"></th>
            </tr>
            </thead>
            <tbody>
            @if (Model.Route.RouteDetails != null && Model.Route.RouteDetails.Any())
            {
                foreach (var detail in Model.Route.RouteDetails)
                {
                    await Html.RenderPartialAsync("Components/Details/_RouteDetail", detail);
                }
            }
            <tr id="LastDetailRowRouteDetail">
                <td colspan="6" class="text-center">
                    <button class="btn btn-sm btn-outline-primary" id="btnAddDetailRouteDetail">
                        <i class="fa fa-plus"></i> @L("Create")
                    </button>
                </td>
            </tr>
            </tbody>
        </table>
    </div>
</div>